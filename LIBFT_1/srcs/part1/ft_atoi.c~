#include "libft.h"

void	rm_space_symb(char **str)
{
	while ((**str == ' ') || (**str == '\n') || (**str == '\t'))
		(*str)++;
}

int		ft_atoi(const char *str)
{
	int sign;
	int nbr;
	char *s;

	nbr = 0;
	sign = 1;
	s = (char *)str;;
	rm_space_symb(&s);
	if (*s == '-')
	{
		sign = -1;
		s++;
	}
	else if (*s == '+')
		s++;
	while (*s >= '0' && *s <= '9')
	{
		nbr *= 10;
		nbr += *s - 48;
		s++;
	}
	return (nbr * sign);
}
