#include <libft.h>

void    *ft_memcpy(void *destination, const void *source, size_t num)
{
	char	*src;
	char	*des;
	size_t	n;

	src = (char *)source;
	des = (char *)destination;
	n = -1;
	while (n++ < num)
		*(des + n) = *(src + n);
	return (destination);
}
