#include "libft.h"

char    *ft_strcat(char *restrict dst, const char *restrict src)
{
	//ft_strcpy(dst + ft_strlen(dst), src);
	while (*dst)
        *dst++ = *src++;
  
		*(dst + ft_strlen(dst) + ft_strlen(src) + 2) = '\0';
	return (dst);
}
