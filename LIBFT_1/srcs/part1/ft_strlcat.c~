#include "libft.h"

size_t  ft_strlcat(char *restrict dst, const char *restrict src, size_t size)
{
	size_t n;
	size_t len;
	
	n = 0;
	len = ft_strlen(dst);
	if ((size - 1) <= ft_strlen(dst))
		return (size + ft_strlen(src));
	else 
	{
		n =  (size) - ft_strlen(dst);
		len = ft_strlen(dst);
		if (n > ft_strlen(src))
			ft_strcat(dst, src);
		else
		ft_strncat(dst, src, n);
	}
		
	return  (len);
}

