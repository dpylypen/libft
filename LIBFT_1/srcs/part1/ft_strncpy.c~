#include "libft.h"

char    *ft_strncpy(char *dst, const char *src, size_t len)
{
	char *des;

	des = dst;
	if (dst && src)
	{
		while (*src)
			*dst++ = *src++;
		*dst = '\0';
	}
	return (des);
}
