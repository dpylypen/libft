#include "libft.h"
{
	char *c_ptr_to_find;
	char *c_ptr_str;

	if (*to_find == '\n')
		return (str);
	while (*str)
	{
		c_ptr_to_find = to_find;
		if (*str == *c_ptr_to_find)
		{
			c_ptr_str = str;
			while (*c_ptr_str == *c_ptr_to_find || !(*c_ptr_to_find))
			{
				if (!(*c_ptr_to_find))
					return (str);
				c_ptr_str++;
				c_ptr_to_find++;
			}
		}
		str++;
	}
	return (0);
}
