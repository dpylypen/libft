#include "libft.h"

static void	begin_rm_space(char **str)
{
	while ((**str == ' ') || (**str == '\n') || (**str == '\t'))
		(*str)++;
}

static void end_rm_space(char **str)
{
	*str--;
    while ((**str == ' ') || (**str == '\n') || (**str == '\t'))
		(*str)--;
}

char	*ft_strtrim(char const *s)
{
	char *beg;
	char *end;
	char *str;
	
	beg = (char *)s;
	begin_rm_space(&beg);
	end = beg + ft_strlen(beg);
	//end = beg + ft_strlen(beg);
	end_rm_space(&end);
	if (s)
	{
		//begin_rm_space(&beg);
		//	end_rm_space(&end);
		str = ft_strnew(end - beg);
		if (str)
		return (ft_memcpy(str, beg, end - beg + 1));
	}
	return (0);
}

