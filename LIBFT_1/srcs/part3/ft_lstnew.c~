#include "libft.h"

t_list  *ft_lstnew(void const *content, size_t content_size)
{
	t_list *list;
	
	if(!content)
		return(0);
	list = (t_list *)ft_memalloc(sizeof(t_list));
	if (list)
	{
		list->content = ft_memcpy(ft_memalloc(content_size), content, content_size);;
		list->content_size = content_size;
		list->next = NULL;
	}
	return (list);
}
